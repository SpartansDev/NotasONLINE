
@{
    ViewBag.Title = "Perfil";
    var id = ViewBag.IdProfesor;
    Layout = "~/Views/Shared/_LayoutProfe.cshtml";
}
<input type="hidden" value="@id" id="var"/>
<div class="container">
    <div class="row">
        <div class="card carts-centradas" style="width: 25rem;">
            <div class="card-body">
                <h5 class="card-title">Datos del perfil</h5>
                <input type="hidden" id="id" name="Id" />
                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="Nombre" />
                </div>
                <div class="form-group">
                    <label for="Apellido">Apellido</label>
                    <input type="text" class="form-control" id="apellido" name="Apellido" />
                </div>
                <div class="form-group">
                    <label for="Email">Correo electrónico</label>
                    <input type="email" class="form-control" id="email" name="Email" />
                </div>
                <div class="form-group">
                    <label for="Password">Contraseña</label>
                    <input type="password" class="form-control" id="pass" name="Password" />
                </div>
            </div>
        </div>

    </div>
</div>
<script src="~/Scripts/JSprofesor/funcionesProfesor.js"></script>
