
@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div class="row">

        <div class="col-12">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary espacio-btn" data-toggle="modal" data-target="#exampleModalLong">
                Crear Nuevo Grupo
            </button>
            <!--buscar-->
            <form id="formbuscar">
                <div class="form-group">
                    <input type="text" class="form-control espacio-btn" placeholder="Escribe el nombre del grupo" id="grupos" onkeyup="inicio()" />
                </div>
            </form>
        </div>
        <!--Modal-->
        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Agregar un Nuevo Grupo</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <!--Formulario-->
                        <div>
                            <form id="formulario">
                                <input type="hidden" id="id" name="Id" />
                                <div class="form-group">
                                    <label>Grupo:</label>
                                    <input type="text" id="nombre" name="NombreGrupo" class="form-control" placeholder="Nombre de grupo. ejemplo( 1TIDS01 )"/>
                                </div>
                                <div class="form-group">
                                    <label>Turno</label>
                                    <select id="turno" name="TurnoId" class="form-control">
                                        <option value="-1">Selecciona un turno</option>
                                        <option value="Matutino">Matutino</option>
                                        <option value="Vespertino">Vespertino</option>
                                        <option value="Nocturno">Nocturno</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Carrera</label>
                                    <select id="carrera" name="CarreraId" class="form-control">
                                        <option value="-1">Selecciona una carrera</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Profesores</label>
                                    <select id="profesor" name="ProfesoresId" class="form-control">
                                        <option value="-1">Selecciona un Profesor</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="submit" id="btnGuardar" value="Guardar Registro" class="btn btn-outline-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

<div class="col-sm-12 col-md-12 col-lg-12">
    <div class="table-responsive">
        <table id="tbgrupos" class="table table-dark table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Codigo</th>
                    <th>Grupo</th>
                    <th>Turno</th>
                    <th>Carrera</th>
                    <th>Profesor Encargado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-white"></tbody>
        </table>
    </div>
</div>
<script src="~/Scripts/grupoAJAX.js"></script>